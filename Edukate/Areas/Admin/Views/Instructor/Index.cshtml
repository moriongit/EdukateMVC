@using Edukate.ViewModels.InstructorVM
@model ICollection<InstructorListVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Team Control</h6>
                <a asp-action="Create" asp-controller="Instructor" class="btn btn-outline-success">Create</a>
            </div>
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                           
                            <th>Image</th>
                           
                           
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                
                                <td><img src="~/@item.ImgPath" width="150"/></td>
                                
                                <td><a asp-action="Update" asp-controller="Instructor" asp-route-id="@item.Id" class="btn text-center text-success">Update</a></td>
                                <td><a asp-action="Delete" asp-controller="Instructor" asp-route-id="@item.Id" class="btn text-center text-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>